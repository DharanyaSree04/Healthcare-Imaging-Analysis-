import cv2
import numpy as np
import matplotlib.pyplot as plt

# Load the MRI image
image_path = 'brain_mri.jpg'  # Replace with your image path
img = cv2.imread(image_path, cv2.IMREAD_GRAYSCALE)

# Apply Gaussian Blur to reduce noise
blurred = cv2.GaussianBlur(img, (5, 5), 0)

# Apply thresholding to segment the tumor
_, thresh = cv2.threshold(blurred, 45, 255, cv2.THRESH_BINARY)

# Invert the threshold image
thresh = cv2.bitwise_not(thresh)

# Find contours in the threshold image
contours, _ = cv2.findContours(thresh.copy(), cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)

# Draw contours and highlight the largest one (assuming it's the tumor)
output = cv2.cvtColor(img, cv2.COLOR_GRAY2BGR)
if contours:
    largest_contour = max(contours, key=cv2.contourArea)
    cv2.drawContours(output, [largest_contour], -1, (0, 0, 255), 2)

# Display results
plt.figure(figsize=(10, 5))
plt.subplot(1, 3, 1)
plt.title("Original")
plt.imshow(img, cmap='gray')

plt.subplot(1, 3, 2)
plt.title("Threshold")
plt.imshow(thresh, cmap='gray')

plt.subplot(1, 3, 3)
plt.title("Detected Tumor")
plt.imshow(output)

plt.tight_layout()
plt.show()

